<div class="wrapper">
  <div class="newrequest">
    <% if @offer.errors.any? %>
    <%= @offer.errors.messages.first[1].join %>
    <% end %>
    <%= form_for [@dutchie, @offer], url: dutchy_offers_path do |f| %>
    <%= f.label :message %>
    <%= f.text_field :message %>
    <%= f.submit %>
    <% end %>
  </div>
</div>
