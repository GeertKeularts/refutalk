<div class="wrapper">
  <h1>EDIT YOUR PROFILE </h1>



  <%= form_for @user, url: profile_update_path, html: {method: :get} do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :kind %>
  <%= f.select :kind, options_for_select(["refugee", "dutchie"]) %>

  <%= f.label :photo %>
  <%= f.text_field :photo %>
  <%= f.submit %>

  <% end %>
</div>
