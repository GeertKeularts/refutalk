<div class="wrapper">
  <div class="profile">
    <h3>Edit your profile </h3>
    <div class="profile-info">
      <div>

        <%= simple_form_for @user, url: profile_path(@user) do |f| %>
        <%= f.input :username %>
        <%= f.input :description %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.input :description, as: :text, class: 'message' %>
        <%= f.submit %>
        <% end %>


      </div>

    </div>
  </div>
</div>
